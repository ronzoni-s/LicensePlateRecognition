<Window x:Class="BlurBehindDemo.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlurBehindDemo"
        mc:Ignorable="d"
        WindowStyle="None"
		BorderThickness="3"
		BorderBrush="Gray"
        ResizeMode="NoResize"
        Background="White"
        MouseDown="Window_MouseDown"
        Title="Selector" Height="150" Width="200">
    <Grid>
        <Label Content="Devices" VerticalContentAlignment="Center" Margin="10,44,132,72" />
        <ComboBox Margin="75,44,10,72" Name="selector"/>
        <Button IsDefault="true" Name="select" HorizontalAlignment="Center" Height="30" Width="50" VerticalAlignment="Bottom" Content="Select" Margin="75,0,69,10" Click="Select_Click"/>
        <Button Name="Close" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderThickness="0">
            <Image Source="{StaticResource Exit}" Width="15" Height="15" />
        </Button>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,77,0,0" Width="174" Height="22" Name="error" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Red"/>
    </Grid>
</Window>
